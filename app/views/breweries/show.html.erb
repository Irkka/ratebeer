<p id="notice"><%= notice %></p>

<h2>
	<%= @brewery.name %>
</h2>

<p>
  <b>Year:</b>
  <%= @brewery.year %>
</p>

<p>
	Number of beers: <%= @brewery.beers.count %>
</p>
<p>
		Average rating: <%= @brewery.average_rating %>
</p>

<table>
<th>Beer name</th>
<th>Style</th>
<% @brewery.beers.each do |beer| %>
	<tr>
		<td><%= link_to "#{ beer.name }", beer %></td>
		<td><%= beer.style %></td>
	</tr>		
<% end %>
</table>

<%= link_to 'Edit', edit_brewery_path(@brewery), :class => 'btn btn-primary' %>
<%= link_to 'Destroy', @brewery, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %>
<%= link_to 'Back', breweries_path, :class => 'btn' %>
